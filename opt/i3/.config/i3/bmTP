bindsym    $w+w       workspace number $ws6;     focus tiling
bindsym    $w+e       workspace number $ws7;     focus tiling
bindsym    $w+a       workspace number $ws8;     focus tiling
bindsym    $w+s       workspace number $ws9;     focus tiling

