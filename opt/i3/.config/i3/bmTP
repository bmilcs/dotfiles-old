#──────────────────────────────────────────────────  workspace hotkeys  ───────

bindcode   $w+$tilde  workspace number $ws1;     focus tiling
bindsym    $w+1       workspace number $ws2;     focus tiling
bindsym    $w+2       workspace number $ws3;     focus tiling
bindsym    $w+Tab     workspace number $ws4;     focus tiling
