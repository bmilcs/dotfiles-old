#!/usr/bin/env bash
#  ▄▄▄▄· • ▌ ▄ ·. ▪  ▄▄▌   ▄▄· .▄▄ ·   ──────────────────────
#  ▐█ ▀█▪·██ ▐███▪██ ██•  ▐█ ▌▪▐█ ▀.   ╔╦╗╔═╗╔╦╗╔═╗╦╦  ╔═╗╔═╗
#  ▐█▀▀█▄▐█ ▌▐▌▐█·▐█·██ ▪ ██ ▄▄▄▀▀▀█▄   ║║║ ║ ║ ╠╣ ║║  ║╣ ╚═╗
#  ██▄▪▐███ ██▌▐█▌▐█▌▐█▌ ▄▐███▌▐█▄▪▐█  ═╩╝╚═╝ ╩ ╚  ╩╩═╝╚═╝╚═╝
#  ·▀▀▀▀ ▀▀  █▪▀▀▀▀▀▀.▀▀▀ ·▀▀▀  ▀▀▀▀   https://dot.bmilcs.com
#                DISTRO-BASED SYSTEM UPDATE
#────────────────────────────────────────────────────────────

source _bm
source _distro

if [[ $DISTRO = arch* ]]; then

  # ARCH
  _a pacman/aur && yay -Syyyuuu && _s

elif [[ $DISTRO = debian* ]]; then

  # DEBIAN
  _a apt update && sudo apt update -y && _s
  _a apt dist-upgrade && sudo apt dist-upgrade -y && _s
  _a apt upgrade && sudo apt upgrade -y && _s
  _a apt clean && sudo apt clean -y && _s
  _a apt autoremove && sudo apt autoremove --purge -y && _s
  _a apt autoclean && sudo apt autoclean -y && _s

  # PIHOLE
  if pihole -v PIHOLE &> /dev/null; then
    _a pihole -up
    sudo pihole -up
  fi

  # DOCKER
  if docker-compose -v DOCKER-COMPOSE &> /dev/null; then
    dcr
  fi

  if [ -f /var/run/reboot-required ]; then
    _e "reboot is required!"
  fi

else # NOT CONFIGURED
  _e unconfigured distro\! update me\!\! && _i \"/usr/local/bin/up\"
fi

echo
exit 0
