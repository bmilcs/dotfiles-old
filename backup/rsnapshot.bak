# RSNAPSHOT [./rsnapshot.conf]

#─────────────────────────────────────────────────────────  crontab -e  ───────

# 30 3     * * *  root  /usr/bin/rsnapshot -c /home/bmilcs/.config/rsnapshot/docker.conf daily
# 10 0  3  * * 1  root  /usr/bin/rsnapshot -c /home/bmilcs/.config/rsnapshot/docker.conf weekly
# 11 30 2  1 * *  root  /usr/bin/rsnapshot -c /home/bmilcs/.config/rsnapshot/docker.conf monthly 

#──────────────────────────────────────────────────────────  universal  ───────

config_version	1.2

# path
snapshot_root	/backup

# log
logfile	/backup/backup.log

# lockfile
lockfile	/home/bmilcs/rnapshot.pid

# include/exclude
include_file		/home/bmilcs/.config/rsnapshot/backup.conf
exclude_file		/home/bmilcs/.config/rsnapshot/exclude.conf

# schedule
retain		daily		6
retain		weekly		7
retain		monthly		6

# options
no_create_root	1
loglevel	3
verbose		5

# cmds
cmd_cp		/bin/cp
cmd_rm		/bin/rm
cmd_rsync	/usr/bin/rsync
cmd_logger	/usr/bin/logger

# rsync args
rsync_long_args	--delete --numeric-ids --delete-excluded

#──────────────────────────────────────────────────────────────  paths  ───────

#include

#exclude

