# dotfile rc file debugging
. "${HOME}/bin/sys/dotfile_logger"
dotlog '+ $ZDOTDIR/.zshrc'

# load configs
for cfg ($ZDOTDIR/*.zsh); do
  [[ -e $cfg ]] && source $cfg
done

# run update script (subprocess to prevent trap from closing term)
[[ -e $ZDOTDIR/05-update.sh ]] \
  && (. $ZDOTDIR/05-update.sh)
