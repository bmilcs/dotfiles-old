# ----  services  ---------------------------------------------------------------------------------------" && echo
function gita() {
	gitd add $@
	gitd commit -m "Added $@"
	gitp
}

function sstart() {
	sudo service $@ start
	}
function sstop() {
	sudo service $@ stop
	}
function srestart() {
	sudo service $@ restart
	}
function sstatus() {
	sudo service $@ status
	}
function mkdr() {
	mkdir -p "$@" && cd "$@";
	}

function apti() {
	sudo apt-get install $@ -y
	}

function dexec() { 
	docker exec -ti --priveledged $@ sh
	}

function aptr() {
	sudo apt-get purge $@ -y
	}

function aptf() {
	dpkg --get-selections | grep $@
	}

function apts() {	
	systemctl status $@; 
	}

function myip() {
	printf "\n%s" "          host:   "
	echo $HOSTNAME "(.bm.bmilcs.com)"
	ipp="ip a | sed -En 's/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p'"
	eval ip=\$\($ipp\)
	printf "%s" "           lan:   " 
	echo $ip 
	eval wan=\$\(dig @1.1.1.1 ch txt whoami.cloudflare +short\)
	wan="${wan%\"}"
	wan="${wan#\"}"
	printf "%s\n\n" "           wan:   $wan " 
	}

function ddel() {
	docker stop $(docker ps -a -q)
	docker rm $(docker ps -a -q)
	}

function dlog () {
	docker logs -f $@
	docker-compose -f ~/docker/docker-compose.yaml logs -tf --tail="50" | grep $@
	}

function dre() {
	docker restart $@
	docker logs -f $@
}

function colors() {
T='gYw'   # The test text
echo -e "\n                 40m     41m     42m     43m\
    44m     45m     46m     47m";
for FGs in '    m' '   1m' '  30m' '1;30m' '  31m' '1;31m' '  32m' \
          '1;32m' '  33m' '1;33m' '  34m' '1;34m' '  35m' '1;35m' \
          '  36m' '1;36m' '  37m' '1;37m';
  do FG=${FGs// /}
  echo -en " $FGs \033[$FG  $T  "
  for BG in 40m 41m 42m 43m 44m 45m 46m 47m;
    do echo -en "$EINS \033[$FG\033[$BG  $T  \033[0m";
  done
  echo;
done
echo
}
