# hotkeys #####################################################################

#mods
set $mod Mod4
set $mod2 Mod1
# log out / restart / reload
bindsym  $mod+Escape exec "i3-msg exit"
bindcode $mod+Control+49 reload
bindcode $mod+49 restart
bindcode $mod+Shift+49 exec xrdb ~/.Xresources
# nav menu: rofi
bindcode $mod+23 exec rofi -show drun -display-drun "" -config ~/.config/rofi/config
# audio control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle 
# move floating windows
floating_modifier $mod
# fav apps
bindcode $mod+48 exec firefox 
bindcode $mod+47 exec code
bindsym $mod+Return exec i3-sensible-terminal
bindsym Print exec flameshot gui
bindcode $mod+51 exec flameshot gui
# navigation & core functionality
bindsym $mod+q kill
bindsym $mod+d focus right
bindsym $mod+Control+d move right
bindsym $mod+a focus left
bindsym $mod+Control+a move left
bindsym $mod+w focus up
bindsym $mod+Control+w move up
bindsym $mod+s focus down
bindsym $mod+g focus parent
bindsym $mod+j focus child
bindsym $mod+Control+s move down
bindsym $mod+z mode "$mode_gaps"
bindsym $mod+x mode "resize"
bindsym $mod+c split v
bindsym $mod+Control+c split h
# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# alternatively, you can use the cursor keys:
bindsym $mod+Control+Left move left
bindsym $mod+Control+Down move down
bindsym $mod+Control+Up move up
bindsym $mod+Control+Right move right
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# resize
bindsym $mod+PageUp move right

