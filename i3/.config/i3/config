# hotkeys #####################################################################

#mods
set $mod Mod4
set $mod2 Mod1
# log out / restart / reload
bindsym $mod+$mod2+Escape exec "i3-msg exit"
bindsym $mod+Shift+Escape exit

bindcode $mod+Control+49 reload
bindcode $mod+49 restart
bindcode $mod+Shift+49 exec '/home/bmilcs/.config/i3/sh/xrdb-xresources.sh'
#bindcode $mod+Shift+49 exec xrdb ~/.Xresources
# nav menu: rofi
bindcode $mod+23 exec rofi -show drun -display-drun "" -config ~/.config/rofi/config
# audio control
bindsym XF86AudioRaiseVolume exec "pactl --set-sink-volume 0 +5%" 
bindsym XF86AudioLowerVolume exec "pactl --set-sink-volume 0 -5%"
bindsym XF86AudioMute exec "pactl set-sink-mute 0"
# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
# bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
# bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
# bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle 
# move floating windows
floating_modifier $mod
# fav apps

bindsym $mod+Return exec i3-sensible-terminal
bindcode $mod+51 scratchpad show
bindcode $mod+Control+51 move scratchpad
bindcode $mod+48 exec firefox 
bindcode $mod+47 exec code
bindsym Print exec flameshot gui
# navigation & core functionality
bindsym $mod+q kill
bindsym $mod+d focus right
bindsym $mod+a focus left
bindsym $mod+w focus up
bindsym $mod+s focus down
bindsym $mod+e focus parent
bindsym $mod+r focus child
bindsym $mod+Shift+d resize grow width 1 px or 1 ppt
bindsym $mod+Shift+a resize shrink width 1 px or 1 ppt
bindsym $mod+Shift+w resize grow height 1 px or 1 ppt
bindsym $mod+Shift+s resize shrink height 1 px or 1 ppt
bindsym $mod+Control+d move right 50 px
bindsym $mod+Control+a move left  50 px
bindsym $mod+Control+w move up  50 px
bindsym $mod+Control+s move down  50 px

bindsym $mod+j resize shrink height 1 px or 1 ppt
bindsym $mod+k resize grow height 1 px or 1 ppt
bindsym $mod+h resize shrink width 1 px or 1 ppt
bindsym $mod+l resize grow width 1 px or 1 ppt
bindsym $mod+Control+j gaps outer all plus 2
bindsym $mod+Control+k gaps outer all minus 2
bindsym $mod+Control+h gaps inner all plus 2
bindsym $mod+Control+l gaps inner all minus 2
bindsym $mod+x mode "$mode_gaps"
bindsym $mod+z mode "$mode_resize"
bindsym $mod+c split v
bindsym $mod+Control+c split h
# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# alternatively, you can use the cursor keys:
bindsym $mod+Control+Left move left
bindsym $mod+Control+Down move down
bindsym $mod+Control+Up move up
bindsym $mod+Control+Right move right
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
