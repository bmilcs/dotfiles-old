# resizing & gaps #############################################################

smart_gaps on
smart_borders no_gaps
set $mode_resize SIZE
set $mode_gaps GAPS
mode "$mode_resize" {
        bindsym a resize shrink width 1 px or 1 ppt
        bindsym d resize grow width 1 px or 1 ppt
        bindsym w resize grow height 1 px or 1 ppt
        bindsym s resize shrink height 1 px or 1 ppt
        bindsym $mod+a resize shrink width 10 px or 10 ppt
        bindsym $mod+d resize grow width 10 px or 10 ppt
        bindsym $mod+w resize grow height 10 px or 10 ppt
        bindsym $mod+s resize shrink height 10 px or 10 ppt
        bindsym Return mode "default"
        bindcode 49 mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps" {
        bindsym w gaps inner all plus 2
        bindsym s gaps inner all minus 2
        bindsym d gaps outer all plus 2
        bindsym a gaps outer all minus 2
        bindsym x gaps inner all set 0; gaps outer all set 0; mode "default"
        bindsym z gaps inner all set 5; gaps outer all set 10; mode "default"
        bindsym c gaps inner all set 25; gaps outer all set 25; mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindcode 49 mode "default"
}

