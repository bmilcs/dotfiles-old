set $blue1              #5E81AC
set $red                #BF616A
set $orange             #D08770
set $yellow             #EBCB8B
set $green              #A3BE8C
set $purple             #B48EAD
set $bg                 #434C5E
set $inactive-bg        #2E3440
set $urgent-bg          #EBCB8B
set $fg                 #ECEFF4
set $inactive-fg        #4C566A
set $urgent-fg          #BF616A

# COLOR APPLICATION
client.focused          #81a1c1 #81a1c1 #2f343f #81a1c1   #81a1c1
client.focused_inactive #2f343f #2f343f #2f343f #2f343f   #2f343f
client.unfocused        #2f343f #2f343f #d8dee8 #2f343f   #2f343f
