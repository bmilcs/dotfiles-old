{
  "coc.preferences.previewMaxHeight": 50,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "html",
    "yaml",
    "python",
    "json",
    "sh"
  ],
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "vim": "vint",
    "markdown": [
      "write-good",
      "markdownlint"
    ]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": [
        "-i",
        "2",
        "-bn",
        "-ci",
        "-sr",
        "-kp"
      ]
    }
  }
}
