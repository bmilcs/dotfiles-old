#!/bin/sh

get_icon() {
    case $1 in
        # Icons for weather-icons
        # ï¨„ ï¨µ ï¨¶ ï©½ ï©¿ 
        #ðŸŒ£ ðŸŒ¤ ðŸŒ¥ ðŸŒ¦  ðŸŒ§  ðŸŒ© ðŸŒª
        # îŒ€  îŒ  îŒ‚  îŒƒ  îŒ„  îŒ…  îŒ†  îŒ‡  îŒˆ  îŒ‰  îŒŠ  îŒ‹  îŒŒ  îŒ  
        # îŒŽ  îŒ  îŒ  îŒ‘  îŒ’  îŒ“  îŒ”  îŒ•  îŒ–  îŒ—  îŒ˜  îŒ™  îŒš  îŒ›  
        # îŒœ  îŒ  îŒž  îŒŸ  îŒ   îŒ¡  îŒ¢  îŒ£  îŒ¤  îŒ¥  îŒ¦  îŒ§  îŒ¨  îŒ© 
        # îŒª  îŒ«  îŒ¬  îŒ­  îŒ®  îŒ¯  îŒ°  îŒ±  îŒ²  îŒ³  îŒ´  îŒµ  îŒ¶  îŒ·  
        # îŒ¸  î‚  îƒ  î†  î  îŒ  îŒ  î  îœ  îž  îŸ  î   î¡  î¢
        # î£  î¤  î¥  î¦  î§  î¨  î©  îª  î«  î­  î®  î¶  î·  î¸
        # î¹  î»  î½  î¾  îŽª  îŽ«  îŽ¬  îŽ­  îŽ®  î  î‚  î¤  
        01d) icon="îŒ";; # d, clear sky
        01n) icon="îŒ«";; # n, clear sky
        02d) icon="îŒ‚";; # d, few clouds
        02n) icon="îŒ®";; # n, few clouds
        03*) icon="îŒ½";; # scattered clouds
        04*) icon="îŒ’";; # broken clouds
        09*) icon="îŒ˜";; # shower rain
        10d) icon="îŒ†";; # d, rain
        10n) icon="îŒ£";; # n, rain
        11d) icon="îŒ…";; # d, thunder
        11n) icon="îŒ¢";; # n, thunder
        13d) icon="îŒŠ";; # d, snow
        13n) icon="îŒ§";; # n, snow
        50d) icon="îŒƒ";; # d, mist
        50n) icon="îŒ­";; # n, mist
        *) icon="î®"; # ï€
        # Icons for Font Awesome 5 Pro
        #01d) icon="ï†…";;
        #01n) icon="ï•";;
        #02d) icon="ï›„";;
        #02n) icon="ï›ƒ";;
        #03d) icon="ï†";;
        #03n) icon="ï…";;
        #04*) icon="ï„";;
        #09*) icon="ïœ¿";;
        #10d) icon="ïƒ";;
        #10n) icon="ïœ¼";;
        #11*) icon="ï¬";;
        #13*) icon="ï‹œ";;
        #50*) icon="ïŽ";;
        #*) icon="ï„¨";
    esac

    echo $icon
}


KEY="91a028d98386f02bbf8b86143bac5ad9"
CITY="4955089"
UNITS="imperial"
SYMBOL="ï¨„"



API="https://api.openweathermap.org/data/2.5"

if [ -n "$CITY" ]; then
    if [ "$CITY" -eq "$CITY" ] 2>/dev/null; then
        CITY_PARAM="id=$CITY"
    else
        CITY_PARAM="q=$CITY"
    fi

    weather=$(curl -sf "$API/weather?appid=$KEY&$CITY_PARAM&units=$UNITS")
else
    location=$(curl -sf https://location.services.mozilla.com/v1/geolocate?key=geoclue)

    if [ -n "$location" ]; then
        location_lat="$(echo "$location" | jq '.location.lat')"
        location_lon="$(echo "$location" | jq '.location.lng')"

        weather=$(curl -sf "$API/weather?appid=$KEY&lat=$location_lat&lon=$location_lon&units=$UNITS")
    fi
fi

if [ -n "$weather" ]; then
    weather_desc=$(echo "$weather" | jq -r ".weather[0].description")
    weather_temp=$(echo "$weather" | jq ".main.temp" | cut -d "." -f 1)
    weather_icon=$(echo "$weather" | jq -r ".weather[0].icon")

    echo "$(get_icon "$weather_icon")" "$weather_desc", "$weather_temp$SYMBOL"
fi
