#   giturl=$( (echo ) | rofi  -show "" -dmenu -matching fuzzy )

# rofi -show run -modi run -config bottom.rasi -width 25 -height 5\
#   -lines 5 -line-margin 0 -line-padding 0 \
#   -separator-style none -font "Iosevka 14" -columns 1 -bw 0 \
#   -disable-history \
#   -hide-scrollbar \
#   -color-window "#222222, #222222, #b1b4b3" \
