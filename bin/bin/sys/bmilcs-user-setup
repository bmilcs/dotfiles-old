#!/usr/bin/env bash
#  ▄▄▄▄· • ▌ ▄ ·. ▪  ▄▄▌   ▄▄· .▄▄ ·   ──────────────────────
#  ▐█ ▀█▪·██ ▐███▪██ ██•  ▐█ ▌▪▐█ ▀.   ╔╦╗╔═╗╔╦╗╔═╗╦╦  ╔═╗╔═╗
#  ▐█▀▀█▄▐█ ▌▐▌▐█·▐█·██ ▪ ██ ▄▄▄▀▀▀█▄   ║║║ ║ ║ ╠╣ ║║  ║╣ ╚═╗
#  ██▄▪▐███ ██▌▐█▌▐█▌▐█▌ ▄▐███▌▐█▄▪▐█  ═╩╝╚═╝ ╩ ╚  ╩╩═╝╚═╝╚═╝
#  ·▀▀▀▀ ▀▀  █▪▀▀▀▀▀▀.▀▀▀ ·▀▀▀  ▀▀▀▀   https://dot.bmilcs.com
#                 BMILCS USER UID/GID SETUP [./bmilcs-user-setup]
#────────────────────────────────────────────────────────────

source _bm
_tb bmilcs user uid/gid setup

bmUID=$(id -u bmilcs)
bmGID=$(id -g bmilcs)

if [[ $bmUID -ne "1086" ]]; then
  fixUID="1"
  _e "bmilcs user id: ${B}$bmUID"
else
  fixUID="0"
  _s "bmilcs user id: ${B}$bmUID"

fi

if [[ $bmGID -ne "1190" ]]; then
  fixGID="1"
  _e "bmilcs group id: ${B}$bmGID"
else
  fixGID="0"
  _s "bmilcs group id: ${B}$bmGID"
fi

[[ $fixGID -eq 1 ]] \
  && _a "fixing bmilcs UID" \
  && usermod -u 1086 bmilcs \
  && _s "done"
[[ $fixUID -eq 1 ]] \
  && _a "fixing bmilcs GID" \
  && groupmod -G 1190 bmilcs \
  && _s "done"

if _ask "would you like to manually fix an old USER id?"; then
  manUID=$(_prompt "original USER id?")
  echo $manUID
fi
#manGID
exit

find / -group "$bmGID" -exec chgrp -h bmilcs {} \;
find / -user "$bmUID" -exec chown -h bmilcs {} :w\;
