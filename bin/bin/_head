#!/bin/bash

#
# BIN/_HEAD
# -bmilcs
#

NC='\033[0m'
B='\033[1m'
DIM='\033[2m'
ITAL='\033[3m'
UL='\033[4m'
BLINK='\033[5m'
INV='\033[7m'
BLK=${NC}'\033[30m'
RED=${NC}'\033[31m'
GRN=${NC}'\033[32m'
YLW=${NC}'\033[33m'
BLU=${NC}'\033[34m'
PUR=${NC}'\033[35m'
CYN=${NC}'\033[36m'
WHT=${NC}'\033[37m'
TIME="$(date +"%I:%M %P")"

#
# PROMPTS
#

# clean up parameter

# announce
function _t() {
  # TODO parse parameters for illegal symbol &
  # msg=${echo $*| sed -e 's/\&/\\\&/g'}
  # echo $msg
  echo -e "${CYN}${B}$* ${CYN}${NC}"
  }

# announce
function _a() {
  echo -e "\n${BLU}${B}[${BLU} $* ${BLU}${B}]${NC}"
  }

# warn
function _w() {
  echo -e "\n    ${YLW}[!] $* ${NC}"
}

# success
function _s() {
  if [ $# -eq 0 ] ; then 
    echo -e "\n    ${GRN}[√] success${NC}"
  else 
    echo -e "\n    ${GRN}[√] $* ${NC}"
  fi 
  }

# error
function _e() {
  if [ $# -eq 0 ] ; then
    echo -e "\n${RED}    [X]${RED}${B} error${NC}"
  else
    echo -e "\n${RED}    [X]${RED}${B} ${NC}${RED}$*"
  fi
  }

