#!/bin/bash
#  ▄▄▄▄· • ▌ ▄ ·. ▪  ▄▄▌   ▄▄· .▄▄ ·   ──────────────────────
#  ▐█ ▀█▪·██ ▐███▪██ ██•  ▐█ ▌▪▐█ ▀.   ╔╦╗╔═╗╔╦╗╔═╗╦╦  ╔═╗╔═╗
#  ▐█▀▀█▄▐█ ▌▐▌▐█·▐█·██ ▪ ██ ▄▄▄▀▀▀█▄   ║║║ ║ ║ ╠╣ ║║  ║╣ ╚═╗
#  ██▄▪▐███ ██▌▐█▌▐█▌▐█▌ ▄▐███▌▐█▄▪▐█  ═╩╝╚═╝ ╩ ╚  ╩╩═╝╚═╝╚═╝
#  ·▀▀▀▀ ▀▀  █▪▀▀▀▀▀▀.▀▀▀ ·▀▀▀  ▀▀▀▀   https://dot.bmilcs.com
#────────────────────────────────────────────────────────────
#   config file editor
#────────────────────────────────────────────────────────────
source _head

_t cfg editor


etxt() {
  _a VIM 
  unset options i
  while IFS= read -r -d $'\0' f; do
    options[i++]="$f"
  done < <(find "$D/txt/" -maxdepth 3 -type f -name "*" -print0 )
  select opt in "${options[@]}" ; do
    case $opt in
      *) [[ -f $opt ]] && nvim $opt ; exit 0 ;;
    esac
  done
  }

evim() {
  _a VIM 
  unset options i
  while IFS= read -r -d $'\0' f; do
    options[i++]="$f"
  done < <(find "$D/vim/" -maxdepth 3 -type f -name "*vim" -print0 )
  select opt in $D/vim/.vimrc "${options[@]}" ; do
    case $opt in
      *) [[ -f $opt ]] && nvim $opt ; exit 0 ;;
    esac
  done
  }

ezsh() {
  _a ZSH
  unset options i
  while IFS= read -r -d $'\0' f; do
    options[i++]="$f"
  done < <(find "$D/zsh/" -maxdepth 3 -type f -name "*zsh" -print0 )
  select opt in $D/zsh/.zshrc "${options[@]}" ; do
    case $opt in
      *) [[ -f $opt ]] && nvim $opt ; exit 0 ;;
    esac
  done
  }

epoly() {
  _a polybar
  unset options i
  while IFS= read -r -d $'\0' f; do
    options[i++]="$f"
  done < <(find "$D/polybar/" -maxdepth 3 -type f -print0 )
  select opt in "${options[@]}" ; do
    case $opt in
      *) nvim $opt ; exit 0 ;;
    esac
  done
  }

if [ $# = 0 ]; then
  _o 0   txt
  _o 1   vim  
  _o 2   zsh  
  _o 3   polybar  
  _o 4   sxhkd  
  _o 5   bspwm  
  _o 6   tmux  
  _o 7   .xresources  
  read sel
else
  sel=${1}
fi


case $sel in
  0) etxt;;
  1) evim;;
  2) ezsh;;
  3) epoly;;
  4) nvim $D/sxhkd/.config/sxhkd/sxhkdrc;;
  5) nvim $D/bspwm/.config/bspwm/bspwmrc;;
  6) nvim $D/tmux/.tmux.conf;;
  6) nvim $D/xorg/.Xresources;;
  7) nvim $D/xorg/.xinitrc;;
  8) sudovim /etc/hosts;;
  #xterm) vim ~/.Xresources.d/xterm;;
esac

