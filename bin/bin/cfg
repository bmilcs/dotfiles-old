#!/bin/bash
#  ▄▄▄▄· • ▌ ▄ ·. ▪  ▄▄▌   ▄▄· .▄▄ ·   ──────────────────────
#  ▐█ ▀█▪·██ ▐███▪██ ██•  ▐█ ▌▪▐█ ▀.   ╔╦╗╔═╗╔╦╗╔═╗╦╦  ╔═╗╔═╗
#  ▐█▀▀█▄▐█ ▌▐▌▐█·▐█·██ ▪ ██ ▄▄▄▀▀▀█▄   ║║║ ║ ║ ╠╣ ║║  ║╣ ╚═╗
#  ██▄▪▐███ ██▌▐█▌▐█▌▐█▌ ▄▐███▌▐█▄▪▐█  ═╩╝╚═╝ ╩ ╚  ╩╩═╝╚═╝╚═╝
#  ·▀▀▀▀ ▀▀  █▪▀▀▀▀▀▀.▀▀▀ ·▀▀▀  ▀▀▀▀   https://dot.bmilcs.com
#────────────────────────────────────────────────────────────
#   config file editor
#────────────────────────────────────────────────────────────

source _head
_t cfg editor

genls() {
  _a $2
  unset options i
  while IFS= read -r -d $'\0' f; do
    options[i++]="$f"
  done < <(find "$1" -maxdepth 3 -type f -name "*" -print0 | sort -z )
  select opt in "${options[@]}" $3 ; do
    case $opt in
      *) [[ -f $opt ]] && nvim $opt ; exit 0 ;;
    esac
  done
  }

if [ $# = 0 ]; then
  _o t     txt
  _o b     bin
  _o z     zsh  
  _o v     vim  
  _o p     polybar  
  _o k     sxhkd  
  _o bsp   bspwm  
  _o tmux  tmux  
  _o x     xorg
  _o n     ncmpcpp
  _o e     cfg script

  read sel
else
  sel=${1}
fi

clear

case $sel in
  t) genls $D/txt TXT;;
  b) genls $D/bin BIN;;
  z) nvim -S ~/dev/zsh.bm;;
  v) nvim -S ~/dev/vim.bm;;
  p) genls $D/polybar POLYBAR;;
  k) nvim $D/sxhkd/.config/sxhkd/sxhkdrc;;
  bsp) nvim $D/bspwm/.config/bspwm/bspwmrc;;
  tm|tmux) nvim $D/tmux/.tmux.conf;;
  x|xorg) genls $D/xorg XORG;;
  n|ncm) genls $D/ncmpcpp NCMPCPP;;
  #8) sudovim /etc/hosts;;
  #xterm) vim ~/.Xresources.d/xterm;;
  e) nvim $D/bin/bin/cfg
esac

