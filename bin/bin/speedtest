#!/usr/bin/env bash
source _head

_a gk: app speed test

if [ $# = 0 ] ; then
	_e argument required. ie: "timetest st -e sh -c exit"
	exit 0
fi


: "${t:=20}"

i=0 avg=0 high=0 low=99999
while [ "$i" -lt "$t" ]; do
	i=$((i+1))



	var=$( { time "$@"; } 2>&1 )
	var=${var##*real	}
	var=${var//[m.]}
	var=${var%%s*}

	# remove leading zeros
	var=$(( 10#$var ))


	avg=$(( avg + var ))
	[ "$var" -gt "$high" ] && high=$var
	[ "$var" -lt "$low" ] && low=$var
done

_w "avg:  $(( avg / t  ))ms"
_e "low:  ${low}ms"
_s "high: ${high}ms"

