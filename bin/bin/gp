#!/usr/bin/env bash
#  ▄▄▄▄· • ▌ ▄ ·. ▪  ▄▄▌   ▄▄· .▄▄ ·   ──────────────────────
#  ▐█ ▀█▪·██ ▐███▪██ ██•  ▐█ ▌▪▐█ ▀.   ╔╦╗╔═╗╔╦╗╔═╗╦╦  ╔═╗╔═╗
#  ▐█▀▀█▄▐█ ▌▐▌▐█·▐█·██ ▪ ██ ▄▄▄▀▀▀█▄   ║║║ ║ ║ ╠╣ ║║  ║╣ ╚═╗
#  ██▄▪▐███ ██▌▐█▌▐█▌▐█▌ ▄▐███▌▐█▄▪▐█  ═╩╝╚═╝ ╩ ╚  ╩╩═╝╚═╝╚═╝
#  ·▀▀▀▀ ▀▀  █▪▀▀▀▀▀▀.▀▀▀ ·▀▀▀  ▀▀▀▀   https://dot.bmilcs.com
#                 UPDATE DOTFILES TEST [./updf]
#────────────────────────────────────────────────────────────

source _bm
_a local: dotfiles

D="${D:-/home/bmilcs/bm}"
g="git --git-dir=$D/.git --work-tree=$D"

gclean="$($g status | grep "clean")"
gstatus=$($g status -uno 2> /dev/null)
gremote="$($g remote update 2> /dev/null)"

[ $# -gt 0 ] && _w "${GRN}${B}gstatus${YLW}: $gstatus" \
             && _w "${RED}${B}gremote${YLW}: $gremote"

if [[ ! -z "$gclean" ]] ; then

  _f clean

  _a remote dotfiles 

  if [[ "$gstatus" == *"behind"* ]]; then

    _ic "pulling updates (behind)"
    $g pull \

  elif [[ "$gstatus" == *"ahead"* ]]; then

    _ic "pushing updates (ahead)"
    $g push \

  else
    _f "up-to-date"
  fi

else

  _wb "dirty!"
  _ay "commit:"
  $g status -s

fi

if [[ $gstatus == *"diverged"* ]]; then
  _tr "repo has ${B}diverged!"
  _ww rebase required\\n
  _ob "1. ${CYN}${B}git rebase${BLU} or ${CYN}${B}grb${BLU} (forgit)"
  _ob "2. fix conflicts via ${CYN}${B}vim"
  _ob "3. ${CYN}${B}git add${BLU} or ${CYN}${B}ga${BLU} (forgit)"
  _ob "4. ${CYN}${B}git rebase --continue${BLU}, then ${CYN}${B}gp"
fi

echo
_s done "\n"
