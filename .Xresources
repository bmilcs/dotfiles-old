URxvt*termName:								rxvt-unicode-256color
URxvt*loginShell:							true
URxvt*scrollBar:							false
URxvt.scrollStyle:						plain
URxvt.secondaryScroll:				true
URxvt.urgentOnBell:						true
URxvt.depth: 									24
URxvt.letterSpace:            -1
URxvt.lineSpace:              -1 
URxvt.geometry:               92x24
URxvt.internalBorder:					24
URxvt*cursorBlink:						true
URxvt*scrollTtyOutput:				false
URxvt*scrollWithBuffer:				true
URxvt*scrollTtyKeypress:			true
URxvt*saveLines:							16384
URxvt*colorUL:								yellow
Xft.antialias:								true
Xft.autohint:									false
Xft.hinting:									true
Xft.hintstyle:								hintslight
Xft.dpi:											96
Xft.rgba:											rgb
Xft.lcdfilter:								lcdlight


urxvt*font:     xft:Hack:size=10
urxvt*boldFont: xft:Hack-Bold:size=10

! URxvt.font:               
! URxvt.boldFont:            

! URxvt.font: 								xft:Iosevka Term:size=12:antialias=true
! URxvt.boldFont: 						xft:Iosevka Term:bold:size=12:antialias=true

! URxvt.font:     							-*-terminus-medium-*-normal-*-14-140-72-72-*-*-*-*
! URxvt.boldFont:								-*-terminus-bold-*-normal-*-14-140-72-72-*-*-*-*

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.perl-ext-common: default,clipboard,keyboard-select
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger
URxvt.keysym.M-Escape: perl:keyboard-select:activate
! disable annoying ISO/screen capture shift/ctrl issue
URxvt.iso14755: false
URxvt.iso14755_52: false

