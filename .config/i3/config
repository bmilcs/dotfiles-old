# autostart ###################################################################

# wallpaper: feh
for_window [class=".*"] border pixel 3
hide_edge_borders both
exec --no-startup-id exec bash $HOME/.fehbg

# compositor: picom
exec --no-startup-id "picom --config /home/bmilcs/.config/picom/config"

# nav menu: rofi
bindsym $mod+Return exec rofi -show drun -display-drun "" -config ~/.config/rofi/config
bindsym $mod+Shift+Return exec rofi -show drun -display-drun "" -config ~/.config/rofi/config
bindsym $mod+Control+Return exec rofi -show drun -display-drun "" -config ~/.config/rofi/config

# polybar
exec_always --no-startup-id /home/bmilcs/.config/polybar/launch.sh &

# audio
exec --no-startup-id pulseaudio --start

# kdeconnect
exec --no-startup-id /usr/lib/kdeconnectd
exec --no-startup-id kdeconnect-indicator

# networkmanager
exec --no-startup-id nm-applet

# hotkeys #####################################################################

set $mod Mod4
set $mod2 Mod1

# log out / restart / reload
bindsym  $mod+Control+Escape exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindcode $mod+Control+49 reload
bindcode $mod+49 restart
bindcode $mod+Shift+49 exec xrdb ~/.Xresources

# audio control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle 
# bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 1+ unmute"
# bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 1- unmute"
# bindsym XF86AudioMute exec "Qamixer -q sset Master,0 toggle"

# move floating windows
floating_modifier $mod


bindcode $mod+48 exec firefox 
bindcode $mod+47 exec code
bindcode $mod+51 exec i3-sensible-terminal
bindsym Print exec flameshot gui

# navigation & core functionality
bindsym $mod+q kill
bindsym $mod+d focus right
bindsym $mod+Control+d move right
bindsym $mod+a focus left
bindsym $mod+Control+a move left
bindsym $mod+w focus up
bindsym $mod+Control+w move up
bindsym $mod+s focus down
bindsym $mod+Control+s move down
bindsym $mod+z mode "resize"
bindsym $mod+x mode "$mode_gaps"
bindsym $mod+c split v
bindsym $mod+Shift+x split h

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# alternatively, you can use the cursor keys:
bindsym $mod+Control+Left move left
bindsym $mod+Control+Down move down
bindsym $mod+Control+Up move up
bindsym $mod+Control+Right move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

