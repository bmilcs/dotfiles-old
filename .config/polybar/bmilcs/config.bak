[bar/mybar]
dpi = 110
monitor = DP-0
bottom = false
fixed-center = false
width = 100%
height = 20
offset-x = 0
offset-y = 0
radius = 0.0
# width = 50%
# height = 30
# offset-x = 25%
# offset-y = 5
background = #2E3440
foreground = #000
line-size = 0
line-color = #ffffff
border-size = 2
border-color = #81a1c1
padding-right = 2
module-margin = 1
font-0 = NotoSans-Regular:size=8;2
# font-0 = IBM Plex Mono:medium:size=9;3
font-1 = FontAwesome5Free:style=Solid:size=8;3
font-2 = unifont:size=8;3
modules-left = i3
modules-center = memory  cpu  date pulseaudio
modules-right = 
spacing = 0
dim-value = 1
wm-name = i3
tray-position = right
tray-detached = false
tray-maxsize = 18
tray-transparent = false
tray-background = ${root.background}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 5
tray-scale = 1.0
wm-restack = i3
override-redirect = false
dpi-x = 110
dpi-y = 110
enable-ipc = false
[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true
label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-foreground = #D8DEE9
label-focused = %index%
label-focused-background = #4C566A
label-focused-padding = 2
label-focused-foreground = #D8DEE9
[module/date]
type = internal/date
interval = 1.0
date = %m.%d
time = %H:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
label = %date% @ %time%
label-font = 0
label-foreground = #D8DEE9
[module/wireless-network]
type = internal/network
interface = wlol
label-connected = %essid%
format-connected = <ramp-signal>
label-connected-foreground = #A3BE8C
format-disconnected = <label-disconnected>
label-disconnected = Not connected
label-disconnected-foreground = #C33027
label-disconnected-background = #2E3440
ramp-signal-foreground = #A3BE8C
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-5 = 
[module/cpu]
type = internal/cpu
interval = 0.5
label =  %percentage:2%%
label-foreground = #81A1C1
[module/memory]
type = internal/memory
interval = 0.5
format = <label>
label =  %gb_used%
label-foreground = #B48EAD
[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
warn-temperature = 80
format = <label>
label =  %temperature-c%
label-foreground = #BF616A
[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5
time-format = %H:%M
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage:2%%
label-charging-foreground = #A3BE8C
label-discharging = %percentage:2%%
label-discharging-foreground = #EDB54B
label-full = %percentage:2%%
label-full-foreground = #A3BE8C
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = #EDB54B
bar-capacity-width = 10
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = #A3BE8C
animation-charging-framerate = 750
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-foreground = #DCA060
animation-discharging-framerate = 500
[module/decor-glyph]
type = custom/text
content-foreground = #4C566A
margin = 0
[module/sep]
inherit = module/decor-glyph
content = "   "
[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_2d_00.1.hdmi-stereo-extra1
use-ui-max = true
interval = 5
format-volume = <ramp-volume> <label-volume>
label-muted = 🔇 muted
label-muted-foreground = #666
ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊
click-right = pavucontrol
